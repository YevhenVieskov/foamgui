// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
surfaces
{
    type            surfaces;
    libs            ( libsampling );
    timeStart       0;
    timeEnd         400;
    executeControl  timeStep;
    executeInterval 1;
    writeControl    adjustableRunTime;
    writeInterval   0.5;
    surfaceFormat   vtk;
    fields          ( p U vorticity );
    interpolationScheme cellPoint;
    surfaces
    {
        zNormal
        {
            type            cuttingPlane;
            point           ( 0 0 0 );
            normal          ( 0 0 1 );
            interpolate     true;
        }
    }
    startTime       0;
}


