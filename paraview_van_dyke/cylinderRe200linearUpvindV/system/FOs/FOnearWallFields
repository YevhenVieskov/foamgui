nearWallFields1
{
    type            nearWallFields;
    libs            ( fieldFunctionObjects );
    fields          ( ( U UNear ) ( p pNear ) );
    patches         ( wall );
    distance        0.001;
    region          region0;
    enabled         true;
    log             true;
    timeStart       0;
    timeEnd         400;
    executeControl  timeStep;
    executeInterval 1;
    writeControl    adjustableRunTime;
    writeInterval   0.5;
}


