//stopAt          writeNow;

endTime          400; //10; //20-10

deltaT          0.0625; //1.0e-5

writeControl    adjustableRunTime;
/*
adjustableRunTime
clockTime
cpuTime
runTime
timeStep
*/


writeInterval   0.5;


purgeWrite      100;

writeFormat     binary;

writePrecision  8;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;

adjustTimeStep  yes;

maxCo           40;

maxDeltaT      0.0625;

